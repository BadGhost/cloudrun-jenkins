# Copy this file to terraform.tfvars and update with your values

# Required: Your GCP project ID
project_id = "your-gcp-project-id"

# Security: Set strong passwords for Jenkins users
jenkins_admin_password = "your-strong-admin-password"
jenkins_user_password  = "your-strong-user-password"

# IAP Access: List of Google account emails authorized to access Jenkins
# Maximum 3 users for cost optimization
authorized_users = [
  "user1@gmail.com",
  "user2@gmail.com"
]

# Optional: Uncomment and modify if needed
# region = "us-central1"  # Most cost-effective region
# zone = "us-central1-a"
# jenkins_memory = "1Gi"  # Ultra-frugal memory allocation
# jenkins_cpu = "1"
# max_agents = 2  # Maximum Spot VM agents for cost control

